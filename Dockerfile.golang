FROM swr.cn-north-4.myhuaweicloud.com/ddn-k8s/docker.io/golang:1.24-alpine

WORKDIR /app

# 安装 wget 用于健康检查
RUN apk add --no-cache wget

# 设置国内 Go 代理和模块模式
ENV GOPROXY=https://goproxy.cn,direct
ENV GO111MODULE=on

COPY go.mod go.sum ./
RUN go mod download

COPY src/ ./src/

# 确保编译输出到正确的位置，使用模块方式构建
RUN CGO_ENABLED=0 GOOS=linux GO111MODULE=on go build -o main ./src

# 确保文件有执行权限
RUN chmod +x /app/main

EXPOSE 8080

# 使用绝对路径确保命令正确
CMD ["/app/main"] 